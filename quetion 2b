#include <iostream>
using namespace std;

int main() {
    int n ;
    cout<<"Enter any number: ";
    cin>>n;

    for (int i = 0; i <= n; i++) {
            // print spaces
        for (int j = 0; j < i; j++) {
            cout << "  ";
        }
           //print numbers
        for (int j = 0; j <= n-i; j++) {
            cout << j << " ";
        }
           //print numbers in revers
        for (int j = n-i-1; j >=0; j--) {
            cout << j << " ";
        }

        cout << endl;
    }
for(int i=1; i<=n; i++) {
        // print spaces
        for(int j=0; j<=n-i-1; j++) {
            cout << "  ";
        }
        // print numbers
        for(int j=0; j<=i; j++) {
            cout << j << " ";
        }
        // print reverse numbers
        for(int j=i-1; j>=0; j--) {
            cout << j << " ";
        }
        // print spaces
        for(int j=0; j<=n-i-1; j++) {
            cout << "  ";
        }
        cout << endl;
}

    return 0;
}
